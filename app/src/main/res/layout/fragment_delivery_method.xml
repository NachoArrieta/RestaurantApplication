                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/delivery_method_txt_title_local_two" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/modify_data"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/delivery_method_cv_pick_it_local_three">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modify_data_city"
            style="@style/TextInputLayoutStyleRedForDropMenu"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:clickable="false"
            android:hint="@string/city"
            android:textColorHint="@color/red_extra_dark"
            app:boxStrokeErrorColor="@color/yellow_dark"
            app:endIconTint="@color/red_extra_dark"
            app:errorIconTint="@color/yellow_dark"
            app:errorTextColor="@color/yellow_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <AutoCompleteTextView
                android:id="@+id/modify_atv_city"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@android:color/transparent"
                android:fontFamily="@font/montserrat_regular"
                android:inputType="none"
                android:textColor="@color/grey_dark"
                android:textSize="16sp"
                tools:ignore="LabelFor" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modify_data_address"
            style="@style/TextInputLayoutStyleRed"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="12dp"
            android:hint="@string/address"
            android:textColorHint="@color/red_extra_dark"
            app:boxStrokeErrorColor="@color/yellow_dark"
            app:errorEnabled="true"
            app:errorIconTint="@color/yellow_dark"
            app:errorTextColor="@color/yellow_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modify_data_city">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_tie_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:importantForAutofill="no"
                android:inputType="textCapSentences"
                android:padding="8dp"
                android:textColor="@color/grey_dark"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modify_data_floor"
            style="@style/TextInputLayoutStyleRed"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="6dp"
            android:hint="@string/floor"
            android:textColorHint="@color/red_extra_dark"
            app:boxStrokeErrorColor="@color/yellow_dark"
            app:errorEnabled="true"
            app:errorIconTint="@color/yellow_dark"
            app:errorTextColor="@color/yellow_dark"
            app:layout_constraintEnd_toStartOf="@+id/guideline15"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/modify_data_address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_tie_floor"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:importantForAutofill="no"
                android:inputType="number"
                android:maxLength="2"
                android:padding="8dp"
                android:textColor="@color/grey_dark"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/modify_data_floor_number"
            style="@style/TextInputLayoutStyleRed"
            android:layout_width="0dp"
            android:layout_height="88dp"
            android:layout_marginStart="6dp"
            android:layout_marginEnd="12dp"
            android:hint="@string/floor_number"
            android:textColorHint="@color/red_extra_dark"
            app:boxStrokeErrorColor="@color/yellow_dark"
            app:errorEnabled="true"
            app:errorIconTint="@color/yellow_dark"
            app:errorTextColor="@color/yellow_dark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline15"
            app:layout_constraintTop_toBottomOf="@+id/modify_data_address">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/profile_tie_floor_number"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:backgroundTint="@color/white"
                android:fontFamily="@font/montserrat_regular"
                android:importantForAutofill="no"
                android:inputType="textCapCharacters"
                android:maxLength="2"
                android:padding="8dp"
                android:textColor="@color/grey_dark"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/modify_data_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/grey_dark"
            android:clickable="false"
            android:fontFamily="@font/montserrat_regular"
            android:text="@string/delivery_confirm_data"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:backgroundTint="@null"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_begin="205dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>