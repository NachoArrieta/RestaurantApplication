<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Base.Theme.RestaurantApplication" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="colorPrimary">@color/red_extra_dark</item>
        <item name="colorPrimaryVariant">@color/red_dark</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="Theme.RestaurantApplication" parent="Base.Theme.RestaurantApplication" />

    <style name="TextInputLayoutStyleWhite" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/til_tie_white_color</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <style name="TextInputLayoutStyleRed" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/til_tie_red_color</item>
        <item name="hintTextColor">@color/red_extra_dark</item>
    </style>

    <style name="TextInputLayoutStyleRedForDropMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="boxStrokeColor">@color/til_tie_red_color</item>
        <item name="hintTextColor">@color/red_extra_dark</item>
    </style>

    <style name="Theme.RestaurantApplication.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/red_extra_dark</item>
    </style>

    <style name="Theme.RestaurantApplication.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.RestaurantApplication.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyCardViewTop" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.CutTop</item>
        <item name="strokeColor">@color/white</item>
    </style>

    <style name="MyCardViewBottom" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay.MaterialCardView.CutBottom</item>
        <item name="strokeColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>


    <style name="Toolbar_TitleText" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.CutTop" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="ShapeAppearanceOverlay.MaterialCardView.CutBottom" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">36dp</item>
        <item name="cornerSizeBottomLeft">36dp</item>
    </style>

    <style name="TextTabLayout" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressBar" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/red_extra_dark</item>
    </style>

</resources>